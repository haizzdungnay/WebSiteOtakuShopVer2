generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Model đầu tiên: Category
model Category {
  id          String    @id @default(cuid()) // primal key, tự động tạo ID unique
  name        String
  slug        String    @unique
  description String?           // có thể null
  createdAt   DateTime  @default(now())
  
  @@map("categories")     // tên table trong DB
}